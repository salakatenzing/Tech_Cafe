<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".home_page">

    <TextView
        android:id="@+id/urDesc"
        android:layout_width="392dp"
        android:layout_height="153dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="54dp"
        android:text="@string/urDesc"
        android:textAlignment="center"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ur"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/csDesc"
        android:layout_width="394dp"
        android:layout_height="136dp"
        android:layout_marginTop="12dp"
        android:text="@string/csDesc"
        android:textAlignment="center"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cs" />

    <TextView
        android:id="@+id/sdDesc"
        android:layout_width="388dp"
        android:layout_height="116dp"
        android:layout_marginTop="4dp"
        android:text="@string/sdDesc"
        android:textAlignment="center"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/cs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sd" />

    <Button
        android:id="@+id/ur"
        android:layout_width="152dp"
        android:layout_height="95dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="125dp"
        android:backgroundTint="#DAB88B"
        android:text="@string/ur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cs" />

    <Button
        android:id="@+id/sd"
        android:layout_width="158dp"
        android:layout_height="98dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#DAB88B"
        android:text="@string/sdev"
        app:layout_constraintBottom_toTopOf="@+id/sdDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_hp" />

    <TextView
        android:id="@+id/header_hp"
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="125dp"
        android:text="@string/home_page"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cs"
        android:layout_width="161dp"
        android:layout_height="93dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="125dp"
        android:backgroundTint="#DAB88B"
        android:text="@string/cs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sdDesc"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>