<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoftwareDevPage">


    <LinearLayout
        android:layout_width="409dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="371dp"
            android:layout_height="182dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/topics_block"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/sd_stats_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avenir_heavy"
                android:text="@string/sd_stat_name"
                android:textAlignment="center"
                android:textColor="@color/orangeish"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/sd_stat1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/avenir_normal"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sd_stat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/avenir_normal"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bottom_stat_sd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/bottom_stat_sd"
                android:textAlignment="center"
                android:textColor="@color/blueish" />

        </LinearLayout>

        <TextView
            android:id="@+id/sd_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/avenir_heavy"
            android:text="@string/sd_skills"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="153dp"
                    android:layout_height="145dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greenish"
                    android:text="@string/sd_topic_4" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="153dp"
                    android:layout_height="145dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greenish"
                    android:text="@string/sd_topic_5" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="153dp"
                    android:layout_height="145dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greenish"
                    android:text="@string/sd_topic_6" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="153dp"
                    android:layout_height="145dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greenish"
                    android:text="@string/sd_topic_8" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="153dp"
                    android:layout_height="145dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greenish"
                    android:text="@string/sd_topic_9" />


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/sd_interview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/avenir_heavy"
            android:text="@string/sd_interview"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="153dp"
                    android:layout_height="145dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greenish"
                    android:text="@string/sd_topic_1" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="153dp"
                    android:layout_height="145dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greenish"
                    android:text="@string/sd_topic_2" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="153dp"
                    android:layout_height="145dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greenish"
                    android:text="@string/sd_topic_3" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>